        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": "6",
            "maxLength": "16",
            "pattern": " ^ ^ (?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.{6,16}) $",
            "example": "qWerty123"
          }
        }
      },
      "RegistrationResponse": {
        "type": "array",
