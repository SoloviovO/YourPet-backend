          }
      

          }
        ]
      }
    },
    "LogoutRequest": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "example": "6453bbe29b2611f1d181cb07"
        }
      }
    }
  },

  "securitySchemes": {
    "Bearer": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  }
}
