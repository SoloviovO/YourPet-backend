{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.3",
    "title": "Swagger YourPet",
    "description": "Showing off swagger-ui-express"
  },
  "consumes": ["appliation/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://yourpet-backend.onrender.com/api" }],
  "tags": [
    {
      "name": "Users",
      "description": "Authorization endpoints"
    },
    {
      "name": "User",
      "description": "Users endpoints"
    },
    {
      "name": "Notices",
      "description": "Notices endpoints"
    },
    {
      "name": "Friends",
      "description": "Friend endpoints"
    },
    {
      "name": "News",
      "description": "News endpoints"
    },
    {
      "name": "Pets",
      "description": "Pets endpoints"
    }
  ],

  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Users"],
        "summary": "Registration",
        "parameters": [],

        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {}
          },
          "409": {
            "description": "Email in use",
            "content": {}
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],

        "summary": "Login",
        "parameters": [],

        "requestBody": {
          "description": "Login's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {}
          },
          "404": {
            "description": "Email or password is wrong",
            "content": {}
          },
          "401": {
            "description": "Email or password is wrong",
            "content": {}
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],

        "summary": "Logout",
        "parameters": [],

        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogoutRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Deleted successfully"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": "6",
            "maxLength": "16",
            "pattern": " ^ ^ (?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.{6,16}) $",
            "example": "qWerty123"
          }
        }
      },
      "RegistrationResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "name": {
              "type": "string"
            },
            "birthday": {
              "type": "string",
              "pattern": "^(/^\\d{2}\\.\\d{2}\\.\\d{4}$/)$"
            },
            "phone": {
              "type": "string",
              "pattern": "^(/^\\+380\\d{9}$/)$"
            },
            "city": {
              "type": "string",
              "pattern": "^(/^[A-Z][a-z]+(?:[\\s-][A-Z][a-z]+)*$/)$"
            },
            "image": {
              "type": "string",
              "format": "binary"
            }
          }
        },
        "example": [
          {
            "id": "6453bbe29b2611f1d181cb07",
            "email": "1@gmail.com",
            "name": "Name",
            "birthday": "2001-03-20",
            "phone": "+380952351628",
            "city": "Kyiv",
            "image": "//www.gravatar.com/avatar/91d8e7d123dbd461a0662e6d76d58c0f"
          }
        ]
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": "6",
            "maxLength": "16",
            "pattern": " ^ (?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.{6,16}) $",
            "example": "qWerty123"
          }
        }
      },
      "LoginResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string"
            },
            "refreshToken": {
              "type": "string"
            },
            "user": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "name": {
                  "type": "string"
                },
                "birthday": {
                  "type": "string",
                  "pattern": "^(/^\\d{2}\\.\\d{2}\\.\\d{4}$/)$"
                },
                "phone": {
                  "type": "string",
                  "pattern": "^(/^\\+380\\d{9}$/)$"
                },
                "city": {
                  "type": "string",
                  "pattern": "^(/^[A-Z][a-z]+(?:[\\s-][A-Z][a-z]+)*$/)$"
                },
                "image": {
                  "type": "string",
                  "format": "binary"
                }
              }

            }
          }
        },
        "example": [
          {
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiI2NDRiNmQ5NzU2YjljMzc2OTg0YjE0MDgiLCJzZXNzaW9uS2V5IjoiNGEwZTQ1M2EtN2NiMS00ZTgwLTllMTgtYmU0ZTQ3YzJhYjI1IiwiaWF0IjoxNjgyNjczOTI1LCJleHAiOjE2ODI2NzU3MjV9.nd49ejNfSriW6S3dSDAPfUpscukVtgQvN1fsd9y2uFc",

            "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiI2NDU2MjRmYmQxYzBlYmM2NmNjZGIwMGEiLCJzZXNzaW9uS2V5IjoiYzFjMjMzNTYtNWI3Yy00MjFkLWFmNzAtYjM5YjE2OGIxNDk3IiwiaWF0IjoxNjgzNDExMjg0LCJleHAiOjE4NjM0MTEyODR9.0QXD5iPujHoow3aExltvoAO208s5Z5h56pmg8Oj-mno",

            "user": {
              "id": "645624fbd1c0ebc66ccdb00a",
              "email": "heyekep@soombo.com",
              "name": "4440-09-",
